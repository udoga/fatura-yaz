<% if @customer.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h4>
      <ul>
        <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for(@customer) do |f| %>
  <div class="row">
    <label>İsim</label>
    <%= f.text_field :name %>
  </div>
  <div class="row">
    <label>Adres</label>
    <%= f.text_area :address %>
  </div>
  <div class="row">
    <label>Vergi Dairesi</label>
    <%= f.text_field :tax_office %>
  </div>
  <div class="row">
    <label>Vergi Dairesi Numarası</label>
    <%= f.text_field :tax_office_no %>
  </div>
  <div class="actions">
      <%= f.submit "#{f.object.new_record? ? 'Oluştur' : 'Güncelle'}" %>
  </div>
<% end %>
